    <% _.each(config.sidebar_categories, function(pages, category) { %>
      <div class="item">
        <% if (category !== 'null') { %>
          <div class="header"><span><%- category %></span></div>
        <% } %>
        <div class="menu">
          <% pages.forEach(function(path) { %>
            <% p = site.pages.findOne({path: path + '.html'}) || { title: 'INVALID', path: '.' }; %>
              <a class="item <%- page.title === p.title ? 'active' : '' %>" href="<%- relative_url(page.path, p.path) %>">
                <span><%- p.title %></span>
              </a>
          <% }); %>
        </div>
      </div>
    <% }); %>
  </div>
</div>
