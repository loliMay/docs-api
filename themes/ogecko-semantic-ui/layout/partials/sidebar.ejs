<div class="ui rail">
  <div class="ui vertical blue sticky menu">
    <div class="item">
      <div class="header">
          <span><%- theme.logo.title %> <%- theme.logo.subtitle %></span>
      </div>
      <div class="menu">
        <% _.each(config.nav_links || theme.nav_links, function (link, title) { %>
          <a class="item <%- link.active && 'active' %>" href="<%- link.url || link %>"
              <span><%- title %></span>
          </a>
        <% }) %>
      </div>
    </div>

